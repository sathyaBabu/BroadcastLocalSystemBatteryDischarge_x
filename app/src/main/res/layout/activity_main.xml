<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:gravity="center">

    <Button
        android:id="@+id/registerLocalButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register Local Broadcast" />

    <Button
        android:id="@+id/unregisterLocalButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Unregister Local Broadcast" />

    <Button
        android:id="@+id/registerSystemButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Register System Broadcast"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/unregisterSystemButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Unregister System Broadcast" />

    <Button
        android:id="@+id/batterychangedButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Battery Status Monitor."
        android:layout_marginTop="30dp" />


    <Button
        android:id="@+id/sendLocalBroadcastButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Send Local Broadcast"
        android:layout_marginTop="30dp" />


</LinearLayout>
